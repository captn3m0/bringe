{
  "manifest_version": 2,
  "name": "Bringe",
  "description": "This extension takes care of all your movie and tv series needs.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "images/bringe-cd-blue-48.png",
    "default_title": "Bringe"
  },
  "omnibox": {
    "keyword": "b"
  },
  "commands": {
    "launch-bringe": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      },
      "description": "Launch Bringe"
    }
  },
  "icons": {
    "16": "images/bringe-cd-blue-16.png",
    "48": "images/bringe-cd-blue-48.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "background",
    "downloads",
    "downloads.shelf",
    "downloads.open"
  ],
  "background": {
    "scripts": [
      "js/jquery.js",
      "js/background.js"
    ],
    "persistent": true
  }
}